<% include('../layouts/header.ejs') %>
    <h1>Dashboard</h1>

    <table width="50%">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Image</th>
        </tr>
    

    <% if(users.length>0){
        for(let i=0;i<users.length;i++){
            %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td><img src="/userImages/<%= users[i].image %>" width="100px" height="100px" alt="<%= users[i].image %>"></td>
                    <td>
                        <a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
                        <a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
                    </td>
                </tr>
            <%
        }
    }else{
        %>
        <tr>
            <td colspan="5">Users not found</td>
        </tr>
        <%
    } 
    %></table>

